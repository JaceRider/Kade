doctype html
html(ng-app="app" ng-strict-di)
  head
    title(data-ng-bind="$state.current.data.pageTitle")=title

    // Viewport mobile tag for sensible mobile support
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1")

    // Required for HTML5 URL Mode
    base(href='/')

    // STYLES
    link(rel="stylesheet", href="/min/production.min.css")
    // STYLES END

    block styles

  body
    block body

    // The linker searches for this tag and adds js.  If there's no linker, we point to sails.io.js
    // SCRIPTS
    script(src="/min/production.min.js")
    // SCRIPTS END

